{
  "name": "xyz-bank-playwright-automation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",

    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:e2e": "playwright test --grep @e2e",

    "test:smoke:chromium": "playwright test --grep @smoke --project=chromium",
    "test:smoke:firefox": "playwright test --grep @smoke --project=firefox",
    "test:smoke:webkit": "playwright test --grep @smoke --project=webkit",

    "test:regression:chromium": "playwright test --grep @regression --project=chromium",
    "test:regression:firefox": "playwright test --grep @regression --project=firefox",
    "test:regression:webkit": "playwright test --grep @regression --project=webkit",

    "test:e2e:chromium": "playwright test --grep @e2e --project=chromium",
    "test:e2e:firefox": "playwright test --grep @e2e --project=firefox",
    "test:e2e:webkit": "playwright test --grep @e2e --project=webkit",

    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",

    "test:visual": "playwright test tests/visual --project=chromium",
    "test:visual:all": "playwright test tests/visual",
    "test:visual:update": "playwright test tests/visual --project=chromium --update-snapshots",

    "report:html": "playwright show-report",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "report:allure:open": "allure open allure-report",

    "clean": "rimraf test-results playwright-report allure-results allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "@types/pngjs": "^6.0.5",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "monocart-reporter": "^2.9.23",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "winston": "^3.19.0"
  }
}